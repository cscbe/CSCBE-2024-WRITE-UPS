    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "flask_server.py",
                "FLASK_DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/Private/src",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port=80",
                
            ],
            "jinja": true
        }
    ]
}